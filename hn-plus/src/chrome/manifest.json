{
    "name": "hn-plus",
    "version": "1.0.0",
    "manifest_version": 2,
    "description": "Hacker News Plus",
    "background": {
        "page": "background.html"
    },
    "browser_action": {
        "default_popup": "popup.html",
        "default_title": "Hacker News Plus"
    },
    "content_scripts": [ {
        "all_frames": true,
        "js": [
            "js/jquery.js",
            "js/content.js"
        ],
        "matches": [
            "http://news.ycombinator.com/*",
            "https://news.ycombinator.com/*"
        ],
        "run_at": "document_end"
    } ],
    "web_accessible_resources": [
        "css/content.css"
    ]
}
